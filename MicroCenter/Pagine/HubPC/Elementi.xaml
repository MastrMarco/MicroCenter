<Page x:Class="MicroCenter.Pagine.HubPC.Elementi"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MicroCenter.Pagine.HubPC"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="900"
      Title="Elementi">

    <Border Background="{DynamicResource SecundaryBackgroundColor}"
            CornerRadius="10">

        <Grid>

            <Border x:Name="Altro"
                    CornerRadius="8"
                    Width="Auto"
                    Height="50"
                    VerticalAlignment="top"
                    Margin="10"
                    Background="{DynamicResource TertiaryBackgroundColor}">

            </Border>



            <Border x:Name="InfoElemento"
                    CornerRadius="8"
                    Width="555"
                    Height="250"
                    VerticalAlignment="top"
                    HorizontalAlignment="Left"
                    Margin="10,70,10,10"
                    Background="{DynamicResource TertiaryBackgroundColor}">

            </Border>



            <Border x:Name="TabInfo"
                    CornerRadius="8"
                    Width="100"
                    Height="250"
                    VerticalAlignment="top"
                    HorizontalAlignment="Left"
                    Margin="575,70,10,10"
                    Background="{DynamicResource TertiaryBackgroundColor}">

            </Border>



            <Border x:Name="ModificaElemento"
                    CornerRadius="8"
                    Width="220"
                    Height="370"
                    VerticalAlignment="top"
                    HorizontalAlignment="Right"
                    Margin="10,70,10,10"
                    Background="{DynamicResource TertiaryBackgroundColor}">

            </Border>



            <Border x:Name="ListaElementi"
                    CornerRadius="8"
                    Width="665"
                    Height="110"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Margin="10,10,10,10"
                    Background="{DynamicResource TertiaryBackgroundColor}">

            </Border>


            <TextBlock Text="Elementi"
                       FontFamily="ubuntu"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="Black"
                       FontSize="60"
                       FontWeight="Bold" />

            
            
        </Grid>
        
    </Border>

</Page>
