            <!--Seleziona Tema-->
            <Grid Grid.Row="0"
                  Grid.Column="0">

                <Border CornerRadius="16"
                        Width="170"
                        Height="150"
                        Background="{DynamicResource TertiaryBackgroundColor}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                    <Border.BitmapEffect>
                        <DropShadowBitmapEffect ShadowDepth="0"
                                                Direction="0"
                                                Color="#5B8DEF"
                                                Softness="0.8" />
                    </Border.BitmapEffect>

                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>



                        <Label Grid.Row="0"
                               Name="LabTema"
                               Content="Tema"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />



                        <Border Grid.Row="1"
                                CornerRadius="18"
                                Width="150"
                                Height="50"
                                Background="{DynamicResource TertiaryBackgroundColor}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0 0 0 0">

                            <Border.BitmapEffect>
                                <DropShadowBitmapEffect ShadowDepth="0"
                                                        Direction="0"
                                                        Color="#5B8DEF"
                                                        Softness="0.5" />
                            </Border.BitmapEffect>


                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Height="50"
                                        Width="110">

                                <Path Data="{DynamicResource Sole}"
                                      Height="25"
                                      Width="25"
                                      Stretch="UniformToFill"
                                      Fill="{DynamicResource PrimaryYellowColor}"
                                      VerticalAlignment="Center" />

                                <ToggleButton x:Name="Themes"
                                              Tag="Bianco"
                                              IsChecked="False"
                                              Click="Themes_Click"
                                              Style="{DynamicResource ToggleButtonStyle}"
                                              Margin="10 0 10 0">
                                    <ToggleButton.ToolTip>
                                        <Label Name="LabToolTipTema"
                                               Content="Stato Tema" />
                                    </ToggleButton.ToolTip>
                                </ToggleButton>

                                <Path Data="{DynamicResource Luna}"
                                      Height="25"
                                      Width="25"
                                      Stretch="Fill"
                                      Fill="{DynamicResource PrimaryWhiteColor}"
                                      VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>





                        <Label Grid.Row="2"
                               Name="LabTemaInfo"
                               Content="Modifica il Colore"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TertiaryTextColor}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />



                    </Grid>
                </Border>
            </Grid>


