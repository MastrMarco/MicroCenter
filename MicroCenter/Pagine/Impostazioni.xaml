                               VerticalAlignment="Center" />

                        <Grid Grid.Row="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnLinckGitHub"
                                    Grid.Column="0"
                                    Style="{StaticResource IconButtonsForms}"
                                    Content="{DynamicResource GitHub}"
                                    Click="btnIconaGitHub">
                                <Button.ToolTip>
                                    <Label Name="LabToolTipGitHub"
                                           Content="GitHub" />
                                </Button.ToolTip>
                            </Button>


                            <Button x:Name="btnLinckYoutube"
                                    Grid.Column="1"
                                    Style="{StaticResource IconButtonsForms}"
                                    Content="{DynamicResource YouTube}"
                                    Click="btnIconaYouTube">
                                <Button.ToolTip>
                                    <Label Name="LabToolTipYouTube"
                                           Content="YouTube" />
                                </Button.ToolTip>
                            </Button>


                            <Button x:Name="btnLinckTelegram"
                                    Grid.Column="2"
                                    Style="{StaticResource IconButtonsForms}"
                                    Content="{DynamicResource Telegram}"
                                    Click="btnIconaTelegram">
                                <Button.ToolTip>
                                    <Label Name="LabToolTipTelegram"
                                           Content="Telegram" />
                                </Button.ToolTip>
                            </Button>

                        </Grid>


                        <Label Grid.Row="2"
                               Name="LabInfoCreatore"
